{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Depurador de Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=8000"
            ],
            "jinja": true,
            "justMyCode": false,
            "autoReload": true
        }
    ]
}
